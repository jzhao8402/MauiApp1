<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem x:Name="loginFlyoutItem" Title="Login">
        <ShellContent x:Name="loginItem" Title="Login" ContentTemplate="{DataTemplate local:LoginPage}" Route="LoginPage"/>
    </FlyoutItem>

    <FlyoutItem x:Name="aboutFlyoutItem" Title="About">
        <ShellContent x:Name="aboutItem"  ContentTemplate="{DataTemplate local:AboutPage}" Route="AboutPage"/>
    </FlyoutItem>

</Shell>
